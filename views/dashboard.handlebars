<section>
  <h2>Create New Blog Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-body">Description</label>
      <textarea type="text" id="post-body" name="post-body"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if blogPosts.length}}
<section>
  <h2>Your Blog Posts</h2>
  <ol class="post-list">
    {{#each blogPosts as |blogPost|}}
    <li class="blog-container">
      {{> blog-post-info blogPost}}
      <a href="/dashboard/edit/{{blogPost.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-blog-post.js"></script>