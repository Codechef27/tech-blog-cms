<article class="post">
  <div class="title">
    <p> {{ title }}</p>
    <p class="blog-body">{{ body }}</p>
  </div>
  <div class="meta"> 
     by {{user.username}} on {{format_date created_at}}
    |
    <a href="/blog-post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>